<Window x:Class="ObjectDetectionApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="객체 인식 및 이미지 보정 시스템" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 상단 헤더 -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="15">
            <StackPanel>
                <TextBlock Text="객체 인식 및 이미지 보정 시스템" 
                          FontSize="24" 
                          FontWeight="Bold" 
                          Foreground="White"
                          HorizontalAlignment="Center"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <TextBlock Text="카메라 선택:" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox x:Name="CameraComboBox" 
                             Width="200" 
                             SelectionChanged="CameraComboBox_SelectionChanged"/>
                    <Button Content="카메라 새로고침" 
                           Click="RefreshCameras_Click" 
                           Background="#3498DB" 
                           Foreground="White"
                           Margin="10,0,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- 모드 표시 및 제어 버튼 -->
        <Border Grid.Row="1" Background="#ECF0F1" Padding="15" BorderBrush="#BDC3C7" BorderThickness="0,0,0,1">
            <StackPanel>
                <TextBlock x:Name="ModeTextBlock" 
                          Text="현재 모드: 대기 중" 
                          FontSize="18" 
                          FontWeight="Bold" 
                          Foreground="#2C3E50"
                          HorizontalAlignment="Center"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Button Content="학습 모드" 
                           Click="TrainingMode_Click" 
                           Background="#27AE60" 
                           Foreground="White"/>
                    <Button Content="검출 모드" 
                           Click="DetectionMode_Click" 
                           Background="#E67E22" 
                           Foreground="White"/>
                    <Button x:Name="ConfirmButton" 
                           Content="확인" 
                           Click="Confirm_Click" 
                           Background="#3498DB" 
                           Foreground="White"
                           IsEnabled="False"/>
                    <Button x:Name="CancelButton" 
                           Content="취소" 
                           Click="Cancel_Click" 
                           Background="#95A5A6" 
                           Foreground="White"
                           IsEnabled="False"/>
                    <Button x:Name="TrainButton" 
                           Content="학습하기" 
                           Click="Train_Click" 
                           Background="#9B59B6" 
                           Foreground="White"
                           IsEnabled="False"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- 메인 콘텐츠 영역 -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 좌측: 카메라 피드 -->
            <Border Grid.Column="0" Margin="10" BorderBrush="#BDC3C7" BorderThickness="2" CornerRadius="5">
                <Grid>
                    <Image x:Name="CameraImage" 
                          Stretch="Uniform"
                          MouseLeftButtonDown="CameraImage_MouseLeftButtonDown"
                          MouseMove="CameraImage_MouseMove"
                          MouseLeftButtonUp="CameraImage_MouseLeftButtonUp"/>

                    <Canvas x:Name="SelectionCanvas" Background="Transparent"/>

                    <TextBlock Text="카메라가 연결되지 않았습니다" 
                              HorizontalAlignment="Center" 
                              VerticalAlignment="Center"
                              FontSize="18"
                              Foreground="#95A5A6"
                              x:Name="NoCameraText"/>
                </Grid>
            </Border>

            <!-- 우측: 라벨 리스트 및 정보 -->
            <Border Grid.Column="1" Margin="10" BorderBrush="#BDC3C7" BorderThickness="2" CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#34495E" Padding="10">
                        <TextBlock Text="학습 데이터 목록" 
                                  FontSize="16" 
                                  FontWeight="Bold" 
                                  Foreground="White"
                                  HorizontalAlignment="Center"/>
                    </Border>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="LabelListPanel" Margin="10"/>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- 하단: 정확도 표시 -->
        <Border Grid.Row="3" Background="#34495E" Padding="15">
            <StackPanel>
                <TextBlock Text="검출 정확도" 
                          FontSize="16" 
                          Foreground="White" 
                          HorizontalAlignment="Center"
                          Margin="0,0,0,5"/>

                <Grid Height="40">
                    <ProgressBar x:Name="AccuracyProgressBar" 
                                Minimum="0" 
                                Maximum="100" 
                                Value="0"
                                Background="#2C3E50"
                                Foreground="#2ECC71"/>

                    <TextBlock x:Name="AccuracyTextBlock" 
                              Text="0%" 
                              HorizontalAlignment="Center" 
                              VerticalAlignment="Center"
                              FontSize="18"
                              FontWeight="Bold"
                              Foreground="White"/>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Window>