<Window x:Class="ObjectDetectionApp.Views.LabelingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="객체 라벨링" Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                  Text="캡처된 이미지에서 객체 영역을 선택하세요" 
                  FontSize="16" 
                  FontWeight="Bold"
                  Margin="0,0,0,15"/>

        <Border Grid.Row="1" 
               BorderBrush="#BDC3C7" 
               BorderThickness="2" 
               CornerRadius="5"
               Margin="0,0,0,15">
            <Grid>
                <Image x:Name="PreviewImage" 
                      Stretch="Uniform"/>

                <Canvas x:Name="SelectionCanvas" 
                       Background="Transparent"
                       MouseLeftButtonDown="SelectionCanvas_MouseLeftButtonDown"
                       MouseMove="SelectionCanvas_MouseMove"
                       MouseLeftButtonUp="SelectionCanvas_MouseLeftButtonUp"/>
            </Grid>
        </Border>

        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock Text="라벨 이름:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="LabelNameTextBox" 
                    FontSize="14" 
                    Padding="8"
                    BorderBrush="#3498DB"
                    BorderThickness="2"/>

            <TextBlock x:Name="CoordinateTextBlock" 
                      Text="선택 영역: 없음" 
                      Margin="0,10,0,0"
                      Foreground="#7F8C8D"/>
        </StackPanel>

        <StackPanel Grid.Row="3" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right">
            <Button Content="확인" 
                   Click="Confirm_Click" 
                   Width="100"
                   Background="#27AE60"
                   Foreground="White"
                   Padding="10,8"
                   Margin="5"/>
            <Button Content="취소" 
                   Click="Cancel_Click" 
                   Width="100"
                   Background="#95A5A6"
                   Foreground="White"
                   Padding="10,8"
                   Margin="5"/>
        </StackPanel>
    </Grid>
</Window>